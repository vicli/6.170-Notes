<%= form_for(@note,  :remote => true, :html => { :method => :put}, :autofocus => true) do |f| %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :due_date %>
    <%= f.text_field :due_date %>
  </div>
  <div class="field">
    <%= f.label :tag %>
    <%= f.text_field :tag %>
  </div>
  <div class="actions" class = "submit">
    <%= f.submit %>
  </div>
<% end %>