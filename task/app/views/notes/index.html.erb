<h1>Listing notes</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Date created</th>
    <th>Starred</th>
    <th>Owner</th>
    <th>Due date</th>
    <th>Tag</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @notes.each do |note| %>
  <tr>
    <td><%= note.name %></td>
    <td><%= note.description %></td>
    <td><%= note.created_at %></td>
    <td><%= note.starred %></td>
    <td><%= note.owner %></td>
    <td><%= note.due_date %></td>
    <td><%= note.tag %></td>
    <td><%= link_to 'Show', note %></td>
    <td><%= link_to 'Edit', edit_note_path(note) %></td>
    <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

